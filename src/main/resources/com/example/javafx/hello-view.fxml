<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER"  xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafx.HelloController">
    <TextArea fx:id = "chatText" editable="false" VBox.vgrow="ALWAYS"/>
    <TextField fx:id = "inputText" promptText="Введите текст" onAction="#onHelloButtonClick"/>
    <Button text="Отправить"  onAction="#onHelloButtonClick"/>
</VBox>
